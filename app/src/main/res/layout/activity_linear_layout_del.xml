<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_linear_layout_del_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qyddai.an_aw_base.model.adapter.SwipeMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#456aaa"
                android:text="我爱你 小月" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#efd40b"
                android:text="如果余生来得及" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#d40bef"
                android:text="你是我所有的不介意" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d40e18"
                android:text="苹果那个红" />
        </LinearLayout>

        <Button
            android:id="@+id/btnTop"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#d9dee4"
            android:text="置顶"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnUnRead"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#ecd50a"
            android:clickable="true"
            android:text="标记未读"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/color_ff4a57"
            android:text="删除"
            android:textColor="@android:color/white" />

    </com.qyddai.an_aw_base.model.adapter.SwipeMenuView>


    <com.qyddai.an_aw_base.model.adapter.SwipeMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/llContent2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#031533"
                android:text="大海那个蓝" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#595640"
                android:text="小马那个黄" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#cd6bda"
                android:text="match那个帅" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6e2b2e"
                android:text="苹果那个红" />
        </LinearLayout>

        <Button
            android:id="@+id/btnTop2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#d9dee4"
            android:text="置顶"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnUnRead2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="#ecd50a"
            android:clickable="true"
            android:text="标记未读"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnDelete2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/color_ff4a57"
            android:text="删除"
            android:textColor="@android:color/white" />

    </com.qyddai.an_aw_base.model.adapter.SwipeMenuView>


</LinearLayout>
